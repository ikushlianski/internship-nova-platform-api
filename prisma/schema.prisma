generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email            String     @id
  hasAcceptedTerms Boolean    @default(false)
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  memoDecks        MemoDeck[] // Связь с MemoDeck
}

model MemoDeck {
  deck_id     String     @id
  user_id     String
  deck_name   String
  deck_description String?

  parent_id   String?
  parent      MemoDeck?  @relation("ParentChildDecks", fields: [parent_id], references: [deck_id])
  children    MemoDeck[] @relation("ParentChildDecks")

  MemoCard    MemoCard[] @relation("DeckToCards")

  // Relation with the User model
  user        User       @relation(fields: [user_id], references: [email])
}

model MemoCard {
  card_id     String    @id
  deck_id     String
  question    String
  answer      String?
  created_date String?
  updated_date String?
  due_date    String?
  lapses      String?

  deck        MemoDeck  @relation("DeckToCards", fields: [deck_id], references: [deck_id])
}


