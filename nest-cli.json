{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/nova-platform-api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/nova-platform-api/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/nova-platform-api",
  "projects": {
    "nova-platform-api": {
      "type": "application",
      "root": "apps/nova-platform-api",
      "entryFile": "main",
      "sourceRoot": "apps/nova-platform-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nova-platform-api/tsconfig.app.json"
      }
    },
    "users-microservice": {
      "type": "application",
      "root": "apps/users-microservice",
      "entryFile": "main",
      "sourceRoot": "apps/users-microservice/src",
      "compilerOptions": {
        "tsConfigPath": "apps/users-microservice/tsconfig.app.json"
      }
    },
    "auth-z": {
      "type": "library",
      "root": "libs/auth-z",
      "entryFile": "index",
      "sourceRoot": "libs/auth-z/src",
      "compilerOptions": {
        "tsConfigPath": "libs/auth-z/tsconfig.lib.json"
      }
    }
  }
}